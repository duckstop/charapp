@model CharApp.Models.Character

@{
    ViewBag.Title = "SaveGeneratedCharacter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save your fresh character</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Character</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CharID)

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8, col-xs-12, col-ms-6, col-lg-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8, col-xs-12, col-ms-6, col-lg-10">
                    @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.BodyType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8, col-xs-12, col-ms-6, col-lg-10">
                    @Html.EditorFor(model => model.BodyType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BodyType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.Quirk, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8, col-xs-12, col-ms-6, col-lg-10">
                    @Html.EditorFor(model => model.Quirk, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quirk, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class=" form-group">
            <div class="row">
                @Html.Label("Character Avatar", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8, col-xs-12, col-ms-6, col-lg-10">
                    <img src=@Model.imagePath alt="Profile image" title="ROAR!" />
                    @Html.HiddenFor(x => x.imagePath)
                    <input type="file" name="image" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2  col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "DiscardGeneratedCharacter", new { id = Model.CharID })
</div>
